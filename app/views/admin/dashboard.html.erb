<h1>WELCOME ADMIN</h1>
<%= link_to "New", :new_post %>  |  <%= link_to "Main list", posts_path %>
<ul>
    <% @posts.each do |post| %>
    <li>
        <hr>
        TOPIC
        <%= post.topic %>
        <br>
        SUBJECT
        <%= post.subject %>
        <hr>
        PLACE
        <%= post.place %>
        DATE
        <%= post.date %>
        <br>
        DATA
        <%= post.data %>
        <hr>
    </li>
    <%= link_to "Delete this post!", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>
    <%= link_to "Edit this post!", edit_post_path(post) %>
</ul>
<% end %>

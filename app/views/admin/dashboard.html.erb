<div class="container">
<h1>WELCOME ADMIN</h1>
  <%= link_to "New", :new_post %>  |  <%= link_to "Main list", posts_path %>
    <% @posts.each do |post| %>
    <ul>
    <li>
        <hr>
        TOPIC
        <%= post.topic %>
        <br>
        SUBJECT
        <%= post.subject %>
        <hr>
        PLACE
        <%= post.place %>
        DATE
        <%= post.date %>
        <br>
        <div class="form-group">
            <label for="comment">DATA</label>
            <textarea class="form-control" rows="3" id="comment"><%= post.data%></textarea>
        </div>
        <hr>
    </li>
    <%= link_to "DELETE", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>  |
    <%= link_to "EDIT", edit_post_path(post) %>
</ul>
<% end %>
</div>

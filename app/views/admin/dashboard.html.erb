<h1>WELCOME ADMIN</h1>
  <div class="container-dash">
    <% @posts.each do |post| %>
    <div class="container-intro">
<%= link_to "NEW", :new_post %>  |  <%= link_to "MAIN", posts_path %>
  |  <%= link_to "DELETE", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>  |
    <%= link_to "EDIT", edit_post_path(post) %>
        <div class="form-group">
        TOPIC
        <%= post.topic %></div>
        <div class="form-group">
        SUBJECT
        <%= post.subject %></div>
        <div class="form-group">
        PLACE
        <%= post.place %></div>
        <div class="form-group">
        DATE
        <%= post.date %></div>
      </div>
        <div class="container">
        <div class="form-group">
            <textarea class="form-control" rows="9" id="comment"><%= post.data%></textarea>
        </div>
        <hr>
<% end %>
</div>
<hr>
<hr>
</div>

<h1>WELCOME ADMIN</h1>
<ul>
<% @posts.each do |post| %>
  <li>
  TOPIC <%= post.topic %>
  <br>
  SUBJECT <%= post.subject %>
  <hr>
  PLACE <%= post.place %> DATE <%= post.date %>
  <br>
  DATA  <%= post.data %>
  <hr>
</li>
<%= link_to "New", :new_post %>
<%= link_to "Delete this post!", destroy_post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>
<%= link_to "Edit this post!", edit_post_path(post) %>
</ul>
<% end %>
<%= link_to "Main list", posts_path %>
<%= link_to "Edit this post!", edit_post_path %>

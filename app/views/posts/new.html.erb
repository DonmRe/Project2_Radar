<div class="container mainc">
<%= form_for @post do |f| %>
<h1>Create a New Post</h1>
<div class="form-group">
  <%= f.label :topic %>
    <%= f.select :topic, options_for_select([["Select One Topic", ""], "Unsolved Mysteries", "Space & Astronomy", "Paranormal", "Conspiracies"]), :class => 'custom-select' %>
</div>

<div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, class:"form-control", id:"log-f" %>
</div>

<div class="form-group">
    <%= f.label :place %>
    <%= f.text_field :place, class:"form-control", id:"log-f" %>
</div>

<div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, class:"form-control", id:"log-f" %>
</div>

<div class="form-group">
    <label for="comment">DATA</label>
    <textarea class="form-control" rows="5" id="comment"><%= @post.data%></textarea>
  </div>

<div><%= f.submit "Post", class: "btn btn-default" %></div></br>
<% end %>

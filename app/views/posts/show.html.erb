<ul>
    <h1>
        <%= @post.subject %>
    </h1>

    <h3>
        <%= @post.topic %>
    </h3>

    <p>
        LOCATION
        <%= @post.place %>
        | DATE
        <%= @post.date %></p>
    <div class="form-group">
        <textarea class="form-control" rows="8" id="comment"><%= @post.data[0...200] %></textarea>
    <%= render 'comments/form' %>
    </div>
    <span class="badge">PREVIOUS COMMENTS |  <%= @post.comments.count  %> </span>
    <hr>

    <% @post.comments.each do |c| %>
    <div class="form-group">
      <div class="comments-cont">
        <label for="comment">Posted by | <%= c.user.alias.upcase! %> | <%= time_ago_in_words c.created_at %>
            ago</label>
        <textarea class="form-control" rows="3" id="comment"><%= c.comment %> </textarea>
      <%= link_to "Delete", post_comment_path(@post, c), method: :delete if current_user.is_admin ||= current_user == c.user %>
      <hr>
        <% end %>
      </div>
    </div>
